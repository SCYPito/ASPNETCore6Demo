    @* <button type="submit" class="btn btn-info">Submit</button>*@
    <MyButton ButtonType="submit" ButtonClass="btn btn-info col-1" ButtonName="Submit"></MyButton>
    <MyButton ButtonType="reset" ButtonClass="btn btn-danger col-1" ButtonName="Reset"></MyButton>
</EditForm>
